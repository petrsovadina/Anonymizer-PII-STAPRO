# MedDocAI Anonymizer Configuration

# Server nastavení
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Presidio nastavení
SCORE_THRESHOLD=0.3
DEFAULT_LANGUAGE=cs

# Limits
MAX_FILE_SIZE=50MB
MAX_BATCH_SIZE=100

# Security
SECRET_KEY=development-secret-key-change-in-production
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:8501"]

# Features
ENABLE_BATCH_PROCESSING=True
ENABLE_API=True
ENABLE_STREAMLIT=True
